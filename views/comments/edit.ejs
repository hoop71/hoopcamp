<!--include header partials-->
<% include ../partials/header %>

<div class="container">
   <h1 class="text-center">Edit Comment</h1>
   
   <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
     <div class="form-group w-50 p-2 mx-auto">
       <label for="name">Comment Text</label>
       <input type="text" class="form-control" name="comment[text]" id="name" aria-describedby="campgroundName" value="<%= comment.text %>">
       <small id="emailHelp" class="form-text text-muted"></small>
     </div>
     <div style="width: 50%; margin: 0 auto;" class="p-2">
        <button type="submit" class="btn btn-info btn-block">Submit</button>
        <a href="/campgrounds">Go Back</a>
     </div>
   </form>
</div>
<!--include footer partials-->
<% include ../partials/footer %>