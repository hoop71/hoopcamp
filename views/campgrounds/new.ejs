<!--include header partials-->
<% include ../partials/header %>

<div class="container">
   <h1 class="text-center">Create a New Campground</h1>
   
   <form action="/campgrounds" method="POST">
      <div class="form-group w-50 p-2 mx-auto">
         <label for="name">Campground Name</label>
         <input type="text" class="form-control" name="name" id="name" aria-describedby="campgroundName" placeholder="">
         <small id="emailHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group w-50 p-2 mx-auto">
         <label for="name">Price per night</label>
         <input type="text" class="form-control" name="price" id="price" aria-describedby="camproundPrice" placeholder="7.00" min="0.01" step="0.01">
         <small id="emailHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group w-50 p-2 mx-auto">
         <label for="image">Image URL</label>
         <input type="text" class="form-control" name="image" id="image" placeholder="">
      </div>
      <div class="form-group w-50 p-2 mx-auto">
         <label for="description">Campground Description</label>
         <textarea class="form-control" name="description" id="description" rows="3"></textarea>
      </div>
      <div style="width: 50%; margin: 0 auto;" class="p-2">
         <button type="submit" class="btn btn-info btn-block">Submit</button>
         <a href="/campgrounds">Go Back</a>
      </div>
   </form>
   
   
</div>




<!--include footer partials-->
<% include ../partials/footer %>